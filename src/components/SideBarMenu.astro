---
const { sideBarActiveItemID } = Astro.props;
const activeClass = "bg-base-300";

// Helper to prepend base path to routes
const base = import.meta.env.BASE_URL || '/';
const withBase = (path: string) => base === '/' ? path : base.replace(/\/$/, '') + path;
---

<ul class="menu grow shrink menu-md overflow-y-auto">
    <li><a class="py-3 text-base" id="home" href={withBase('/')}>Home</a></li>
    <li><a class="py-3 text-base" id="projects" href={withBase('/projects')}>Projects</a></li>
    <li><a class="py-3 text-base" id="experience" href={withBase('/cv') + '#experience'}>Experience</a></li>
    <li><a class="py-3 text-base" id="cv" href={withBase('/cv')}>CV</a></li>
    <li>
        <a
            class="py-3 text-base"
            href="mailto:ehk75@cornell.edu"
            target="_blank"
            referrerpolicy="no-referrer-when-downgrade">Contact</a
        >
    </li>
</ul>

<script define:vars={{ sideBarActiveItemID: sideBarActiveItemID, activeClass: activeClass }}>
const activeItemElem = document.getElementById(sideBarActiveItemID);
activeItemElem && activeItemElem.classList.add(activeClass);
</script>
