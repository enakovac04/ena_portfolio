---
const base = import.meta.env.BASE_URL || '/';
const withBase = (path: string) => base === '/' ? path : base.replace(/\/$/, '') + path;

const { title, img, desc, url, badge, tags, target = "_blank" } = Astro.props;
const isBlogLink = url.includes("/blog/");
const tagBase = isBlogLink ? "/blog/tag" : null;
---

<div
  class="rounded-lg bg-base-100 hover:shadow-xl transition ease-in-out hover:scale-[102%]"
>
  <a href={url} target={target}>
    <div class="hero-content flex-col md:flex-row">
      {
        img && (
          <img
            src={img}
            width={750}
            height={422}
            alt={title}
            class="max-w-full md:max-w-[10rem] rounded-lg"
            loading="lazy"
            decoding="async"
          />
        )
      }
      <div class="grow w-full">
        <h1 class="text-xl font-bold">
          {title}
          {badge && <div class="badge badge-secondary mx-2">{badge}</div>}
        </h1>
        <p class="py-1 text-1xl">{desc}</p>
        <div class="card-actions justify-end">
          {
            tags &&
              tags.map((tag) =>
                tagBase ? (
                  <a href={withBase(`${tagBase}/${tag}`)} class="badge badge-outline">
                    {tag}
                  </a>
                ) : (
                  <span class="badge badge-outline">{tag}</span>
                )
              )
          }
        </div>
      </div>
    </div>
  </a>
</div>
