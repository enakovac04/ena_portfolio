---
import BaseLayout from "../layouts/BaseLayout.astro";
import TimeLineElement from "../components/cv/TimeLine.astro";
---

<BaseLayout title="Education" sideBarActiveItemID="education">
  <div class="mb-5">
    <div class="text-3xl w-full font-bold">Education</div>
  </div>

  <div class="time-line-container grid gap-4 mb-10">
    <TimeLineElement
      title="Cornell University — College of Engineering"
      subtitle="Aug 2022 – May 2026"
    >
      <ul class="list-disc ml-6">
        <li>B.S. Computer Science, Minor in Artificial Intelligence</li>
        <li>Dean's List (GPA: 3.5+)</li>
        <li>
          Relevant coursework: Deep Learning, Machine Learning, Artificial Intelligence,
          Object Oriented Programming, Data Structures & Algorithms, Functional Programming,
          Operating Systems, Computer Architecture
        </li>
      </ul>
    </TimeLineElement>
  </div>

  <div class="mb-5">
    <div class="text-3xl w-full font-bold">Leadership & Activities</div>
  </div>

  <!-- Added space-y-6 to separate the items more -->
  <div class="time-line-container mb-10 space-y-6">
    <TimeLineElement
      title="First Generation Investors (FGI) — Vice President of Technology"
      subtitle="Aug 2024 – Present"
    >
      <ul class="list-disc ml-6">
        <li>Developed and maintained the chapter website, improving member engagement and accessibility.</li>
        <li>Supported technical onboarding and tooling for members and events.</li>
      </ul>
    </TimeLineElement>

    <TimeLineElement
      title="Epsilon Nu Tau (ENT) — Vice President of Technology & Marketing"
      subtitle="Sep 2023 – Jun 2024"
    >
      <ul class="list-disc ml-6">
        <li>Led marketing strategy and built technical assets to support outreach and recruitment.</li>
        <li>Implemented website and materials that increased online engagement and event attendance.</li>
      </ul>
    </TimeLineElement>

    <TimeLineElement
      title="Women in Computing at Cornell (WICC) — Member"
      subtitle="Aug 2022 – Present"
    >
      <ul class="list-disc ml-6">
        <li>Engaged in community, mentorship, and professional development events supporting women in tech.</li>
        <li>Participated in workshops, networking sessions, and industry panels.</li>
      </ul>
    </TimeLineElement>

    <TimeLineElement
      title="Society of Women Engineers (SWE) — Member"
      subtitle="Aug 2022 – Present"
    >
      <ul class="list-disc ml-6">
        <li>Promoted gender diversity, mentorship, and inclusion through chapter events and STEM outreach.</li>
        <li>Attended technical workshops and career development programming.</li>
      </ul>
    </TimeLineElement>
  </div>
</BaseLayout>
